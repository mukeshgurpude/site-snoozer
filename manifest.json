{
    "short_name": "site-snoozer",
    "name": "Site snoozer",
    "manifest_version": 3,
    "version": "0.0.1",
    "permissions": [
        "activeTab",
        "alarms",
        "notifications",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup/snooze.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "16": "icons/favicon-16x16.png",
        "32": "icons/favicon-32x32.png",
        "192": "icons/android-chrome-192x192.png",
        "512": "icons/android-chrome-512x512.png"
    }
}
